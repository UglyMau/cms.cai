<IfModule mod_rewrite.c>
	RewriteEngine on
	RewriteCond %{REQUEST_URI} !^public
	RewriteRule ^(.*)$ public/$1 [L]

	RewriteCond %{HTTPS} !=on
	RewriteCond %{REQUEST_URI} ^/.well-known/
	RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R]

